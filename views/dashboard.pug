html
  head
    title Jira Logs
    link(rel="stylesheet" href="bootstrap.css")
    link(rel="stylesheet" href="toastr.css")
    link(rel="stylesheet" href="styles/dashboard.css")
    
  body
    include header.pug
    div(class='container')
      if issues.length > 0
        .table-container
          table(class='table table-bordered table-condensed')
            thead(class="thead-light")
              tr
                th 
                th Issue Description
                th Logged
                th Remaining
                th Log time
            tbody    
            each issue in issues
                if issue.issueType === "Story"
                  tr  
                    td(class="bg-light py-4")
                      img(src= issue.issueTypeIconUrl)
                    td(colspan="4" class="bg-light py-4")
                      if !issue.isSubTask == true
                        span(class="font-weight-bold")= `${issue.issueKey} - ${issue.summary}`
                      else
                        span= `${issue.issueKey} - ${issue.summary}`
                else
                if issue.subTasks
                  each subTask in issue.subTasks
                    tr 
                      td 
                      td
                        img(class="pl-4" src= subTask.issueTypeIconUrl) 
                        span(class="ml-2 align-middle")= `${subTask.issueKey} - ${subTask.summary}`
                      td  
                        span= subTask.spentTime
                      td
                        span= subTask.remainingTime     
                      td
                        .input-group
                          input.form-control(type='text' placeholder='Enter time spent')
                          .input-group-append
                            button#button-addon2.btn.btn-outline-secondary(type='button' class='add-time' data-issuekey= subTask.issueKey) add
                else
                  tr
                    td 
                      img(src= issue.issueTypeIconUrl)
                    td
                      if !issue.isSubTask == true
                        span(class="font-weight-bold")= `${issue.issueKey} - ${issue.summary}`
                      else
                        span= `${issue.issueKey} - ${issue.summary}`
                    td  
                      span= issue.spentTime
                    td
                      span= issue.remainingTime     
                    td
                      .input-group
                        input.form-control(type='text' placeholder='Enter time spent')
                        .input-group-append
                          button#button-addon2.btn.btn-outline-secondary(type='button' class='add-time' data-issuekey= issue.issueKey) add
      else
        .no-data-container.text-center
          img(class='mb-2' src='images/beer.jpg' width="320")
          p.lead Chill out and have a beer instead

  script(src="scripts/jquery.js" type="text/javascript")
  script(src="toastr.min.js" type="text/javascript")
  script(src="scripts/dashboard.js" type="text/javascript")